{
  "compilerOptions": {
    "target": "ES2015",            
    "module": "commonjs",            
    "rootDir": "./src",              
    "outDir": "./build",             
    "strict": true,
    "esModuleInterop": true,         
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"                   
  ],
  "exclude": [
    "node_modules"
  ]
}
